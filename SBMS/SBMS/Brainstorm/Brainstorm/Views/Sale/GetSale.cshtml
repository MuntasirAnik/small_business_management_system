
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div><h2 style="color:#0074D9; font-family:'Century Gothic Light'"><strong>Sale</strong></h2></div>
<div class="sidebar-brand-text mx-3">
    <h5>
        @Html.ActionLink("Back", "Add", "Sale", null, null)
    </h5>
</div>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="color:black ;background-color:white">
    <tr>
        <th>Sl</th>
        <th>Sales Code</th>
        <th>Customer</th>
        <th>Date</th>
        
        <th></th>

    </tr >
    @{
        var sale = ViewBag.saleDetail;
    }
    @{ int i = 1;}
    @foreach (var s in sale)
    {
        <tr class="Search">

            <td>@(i++)</td>
            <td>@s.Code</td>
            <td>@s.Customer</td>
          
            <td>@s.Date.ToString("dd/MM/yyyy")</td>
            <td>
                @Html.ActionLink("Details", "GetSalDetails", "Sale", new { Id = s.Id }, null)
            </td>
        </tr>
    }

</table>
<script>

    var link = document.getElementById('search');
    // link.style.display = 'none';
    link.style.visibility = 'hidden';



</script>

   